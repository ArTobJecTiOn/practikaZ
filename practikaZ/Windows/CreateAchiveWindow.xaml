<Window x:Class="practikaZ.Windows.CreateAchiveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practikaZ.Windows"
        mc:Ignorable="d"
        Title="CreateAchiveWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Название достижения:"/>
            <TextBox x:Name="NameBox" Margin="0,5,0,10"/>

            <TextBlock Text="Описание:"/>
            <TextBox x:Name="DescriptionBox" Margin="0,5,0,10" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Button Content="Создать" Click="Create_Click" Width="120"/>
        </StackPanel>
    </Grid>
</Window>
